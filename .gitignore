# Create or append to .gitignore
cat >> .gitignore << 'EOF'
# NeuroFi runtime artifacts
signals/
reports/
logs/
*.log

# Python build/run noise
__pycache__/
*.pyc
*.pyo
*.pyd
*.py[cod]
*.egg-info/
dist/
build/
venv/

# Local env files
.env
.env.*
EOF

# Node.js
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# macOS
.DS_Store

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini

# IDEs and editors
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Compiled files
*.class
*.o
*.so
*.dll
*.exe

# Temporary files
*.tmp
*.swp
*.bak

# Git
.git/
.gitignore

# Others
coverage/
*.tgz
*.zip
*.tar.gz
*.lock

# Large data files
*.json
*.zip
*.faiss
*.tmp
